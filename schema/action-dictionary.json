{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Action",
  "oneOf": [
    {
      "title": "NoOpAction",
      "description": "Do nothing",
      "properties": {
        "name": {
          "type": "string",
          "const": "no-op"
        }
      },
      "required": ["name"],
      "additionalProperties": false
    },
    {
      "title": "HelpAction",
      "description": "Get help on a specific action, or list all available actions",
      "properties": {
        "name": {
          "type": "string",
          "const": "help"
        },
        "aboutAction": {
          "type": "string",
          "description": "The name of an action to get help on"
        }
      },
      "required": ["name"],
      "additionalProperties": false
    },
    {
      "title": "QueryAgentRegistryAction",
      "description": "Ask who the other agents are that I can talk to",
      "properties": {
        "name": {
          "type": "string",
          "const": "query-agent-registry"
        }
      },
      "required": ["name"],
      "additionalProperties": false
    },
    {
      "title": "SendMessageAction",
      "description": "Send a message to another agent",
      "properties": {
        "name": {
          "type": "string",
          "const": "send-message"
        },
        "targetAgentId": {
          "type": "string",
          "description": "The target agent's ID"
        },
        "message": {
          "type": "string",
          "description": "The content of the message"
        }
      },
      "required": ["name", "targetAgentId", "message"],
      "additionalProperties": false
    },
    {
      "title": "ListDirectory",
      "description": "Inspect the contents of a particular directory",
      "properties": {
        "name": {
          "type": "string",
          "const": "list-directory"
        },
        "path": {
          "type": "string",
          "description": "The path of the directory you want to inspect"
        }
      },
      "required": ["name", "path"],
      "additionalProperties": false
    },
    {
      "title": "ReadFile",
      "description": "Read the contents of a particular file",
      "properties": {
        "name": {
          "type": "string",
          "const": "read-file"
        },
        "path": {
          "type": "string",
          "description": "The path of the file you want to inspect"
        }
      },
      "required": ["name", "path"],
      "additionalProperties": false
    },
    {
      "title": "WriteFile",
      "description": "Write the contents of a particular file",
      "properties": {
        "name": {
          "type": "string",
          "const": "write-file"
        },
        "path": {
          "type": "string",
          "description": "The path of the file you want to write to"
        },
        "newContent": {
          "type": "string",
          "description": "The new content of the file"
        }
      },
      "required": ["name", "path", "newContent"],
      "additionalProperties": false
    }
  ]
}
